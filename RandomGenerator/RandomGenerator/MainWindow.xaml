<Window x:Class="RandomGeneratorProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomGeneratorProblem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Label Content="Out TextBlock:" Width="100px" Height="25px" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ScrollViewer  Width="Auto" Height="249" VerticalAlignment="Bottom" Margin="10,0,10,40">
            <TextBlock Name="OutTextBlock" Width="Auto" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Button Name="MainButton" Content="Load 20 000 random numbers"  Click="MainButton_Click" Width="170" Height="25px" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>


    </Grid>
</Window>
